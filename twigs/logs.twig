{% extends 'page.twig' %}

{% block scripts %}
    <script src="{{assets}}/js/util.js"></script>
    <script type="text/javascript" src="/csc3123/assets/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea"
         });
    </script>
{% endblock scripts %}

{% block onload %}
    $('#ptab').on('click', function(e){
        var x = $(e.target)
	if (x.hasClass('delb'))
	{
	    e.preventDefault();
	    e.stopPropagation();
	    bootbox.confirm('Are you sure you you want to delete this Log?', function(r){
	        if (r)
		{ // user picked OK
		    var tr = $(x).parent().parent()
		    $.post('{{base}}/ajax.php', {
			    op :'delentry',
                'bean' : 'page',
			    id : tr.data('id')
			},
			function(data){
			    tr.css('background-color', 'yellow').fadeOut(1500, function(){ tr.remove() })
			}
		    )
		}
	    })
	}
    else if(x.hasClass('editb'))
    {
        
    }
    })
    $('#new-entry').on('show.bs.modal', function(e){
    })
{% endblock onload %}

{% block header %}
    <div class="col-md-12">
	<h1>Logs</h1>
    </div>
{% endblock header %}

{% block main %}
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <table class="table table-striped table-hover" id="ptab">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Body</th>
                        <th>Last Edit</th>
                        <th>Attachments?</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    {% for l in siteinfo.logs %}
                    <tr data-id="{{l.id}}">
                        <td><a></a> {{l.title}}</a></td>
                        <td>{{l.body|raw}}</td>
                        <td>{{l.lastedit}}</td>
                        <td>{{l.attachment}}</td>
                        <td><i class="editb fa fa-edit" ></i></td>
                        <td><i class="delb fa fa-trash-o"></i></td>
                    </tr>
                {% else %}
                    <tr><td colspan="4">No Logs Found</td></tr>
                {% endfor %}
                </tbody>
            </table>
            <p><button class="btn btn-primary" data-toggle="modal" data-target="#new-entry">Add Log</button></p>
        </div>
    </div>
    <div class="modal fade" id="new-entry">
	<div class="modal-dialog">
	    <div class="modal-content">
		<div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span>                    </button>
		    <h4 class="modal-title">New Log Entry</h4>
		</div>
		<form action="{{base}}/newentry" method="POST" id="form">
		    <div class="modal-body">
			    <div class="form-group">
				    <label for="title">Title</label>
				    <input type="text" class="form-control" id="title" placeholder="Title" name="title" required="required"/>
			    </div>
			    <div class="form-group">
				    <label for="bd" class="control-label">Text</label>
                    <textarea id="bd" name="body" class="form-control"></textarea>
			    </div>
		    </div>
		    <div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<button type="submit" class="btn btn-primary">Add</button>
		    </div>
		</form>
	    </div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="modal fade" id="editentry">
	<div class="modal-dialog">
	    <div class="modal-content">
		<div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span>                    </button>
		    <h4 class="modal-title">New Log Entry</h4>
		</div>
		<form action="{{base}}/editentry" method="POST" id="form">
		    <div class="modal-body">
			    <div class="form-group">
				    <label for="title">Title</label>
				    <input type="text" class="form-control" id="title" placeholder="Title" name="title" required="required"/>
			    </div>
			    <div class="form-group">
				    <label for="bd" class="control-label">Test</label>
                    <textarea id="bd" name="body" class="form-control"></textarea>
			    </div>
		    </div>
		    <div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<button type="submit" class="btn btn-primary">Submit Changes</button>
		    </div>
		</form>
	    </div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock main %}