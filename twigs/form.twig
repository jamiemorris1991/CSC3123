{% macro hidden(opts) %}
{% import _self as h %}
    {{h.input('hidden', opts)}}
{% endmacro %}

{% macro checkbox(opts) %}
{% import _self as h %}
    {{h.bsl(opts)}}
    {% for ix,val in opts.values %}
        <label class="checkbox inline">
	    <input type="checkbox" name="{{opts.names[ix]}}" value="{{val}}"{{h.hv('class', opts.class)}}{% if opts.check[ix] and opts.check[ix] == val %} checked="checked"{% endif %}/>
        {{opts.labels[ix]|raw}}
        </label>
    {% endfor %}
    {{h.bse(opts)}}
{% endmacro %}

{% macro radio(opts) %}
{% import _self as h %}
    {{h.bsl(opts)}}
    {% for ix,val in opts.values %}
        <label class="radio inline">
	    <input type="radio" name="{{opts.names[ix]}}" value="{{val}}"{{h.hv('class', opts.class)}}{% if val == opts.value %} checked="checked"{% endif %}/>
        {{opts.labels[ix]|raw}}
        </label>
    {% endfor %}
    {{h.bse(opts)}}
{% endmacro %}

{% macro textarea(opts) %}
{% import _self as h %}
    {{h.bsl(opts)}}
    <textarea{{h.hv('id', opts.id)}}{{h.fv(opts)}}{{h.hv('name', opts.name)}}{{h.hv('class', opts.class)}}{{h.hv('placeholder', opts.ph)}}>{{opts.value}}</textarea>
    {{h.bse(opts)}}
{% endmacro %}

