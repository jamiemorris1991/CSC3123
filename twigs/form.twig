{% macro hv(attr, value)%}
{% if value != '' %} {{attr}}="{{value}}"{% endif %}
{% endmacro hv %}

{% macro fv(opts, attr)%}
{% for v in ['required', 'disabled', 'readonly'] %}{% if opts[v] %} {{v}}="{{v}}"{% endif %}{% endfor %}
{% endmacro fv %}

{% macro input(type, opts) %}
{% import _self as h %}
<input type="{{type}}"{{h.hv('id', opts.id)}}{{h.fv(opts)}}{{h.hv('name', opts.name)}}{{h.hv('value', opts.value)}}{{h.hv('class', opts.class)}}{{h.hv('placeholder', opts.ph)}}/>
{% endmacro input %}

{% macro bsl(opts) %}
{% import _self as h %}
   <div class="control-group">
        {% if opts.label != '' %}
	    <label class="control-label"{{h.hv('for', opts.id)}}>{{opts.label}}</label>
	{% endif %}
   <div class="controls">
{% endmacro bsl %}

{% macro bse(opts) %}
            {% if opts.warn != '' %}
	       <span class="help-inline {{opts.warnc}}">{{opts.warn}}</span>
            {% endif %}
	    </div>
   </div>
{% endmacro bse%}

{% macro text(opts) %}
{% import _self as h %}
    {{h.bsl(opts)}}
    {{h.input('text', opts)}}
    {{h.bse(opts)}}
{% endmacro %}

