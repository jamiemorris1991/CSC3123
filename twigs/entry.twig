{% extends 'page.twig'%}

{% block scripts %}
<script type="text/javascript" src="/csc3123/assets/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
tinymce.init({
    selector: "textarea"
 });
</script>
{% endblock scripts %}

{% block header %}
    <div class="col-md-12">
	<h1>New Log Entry</h1>
    </div>
{% endblock header %}

{% block main %}
    <div class="row">
        <div class="col-md-8">
            <form action="{{base}}/newentry" method="post" role="form">
            <div class="form-group well">
                <label for="title" class="control-label">Title</label>
                <input type="text" id="title" name="title" placeholder="Title" class="form-control" required="required"/>
            </div>
            <div class="form-group well">
                <label for="bd" class="control-label">Test</label>
                <textarea id="bd" name="body" class="form-control"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Submit Entry</button>
            </form>
        </div>
    </div>
{% endblock main %}