{% extends 'page.twig'%}

{% block scripts %}
<script type="text/javascript" src="/csc3123/assets/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
tinymce.init({
    selector: "textarea"
 });
</script>
{% endblock scripts %}

{% block header %}
    <div class="col-md-12">
	<h1>New Log Entry</h1>
    </div>
{% endblock header %}

{% block main %}
    <div class="row">
        <form action="{[base}}/entry" method="post" role="form">
		<div class="form-group">
		    <label for="title" class="control-label">Title</label>
		    <input type="text" id="title" name="login" placeholder="Title" class="form-control" required="required"/>
		    <label for="text" class="control-label">Test</label>
		    <textarea id="ms" name="text" placeholder="Text goes here..." class="form-control" required="required"></textarea>
		</div>
		<button class="btn btn-primary" type="submit">Submit Entry</button>
	    </form>
    </div>
{% endblock main %}